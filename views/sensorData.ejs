        }
      })
      .catch(error => console.error('Error fetching settings:', error));
      
    // Fetch latest personality data
    fetch('/api/personality')
      .then(response => response.json())
      .then(data => {
        if (Array.isArray(data)) {
          data.forEach(item => {
            if (item) handlePersonalityUpdate(item);
